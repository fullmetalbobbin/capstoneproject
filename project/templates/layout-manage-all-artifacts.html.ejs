<!DOCTYPE html>
<html lang="en">

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Manage Artifacts</title>
        <style>
            ul {list-style-type: none;}
            img{max-height: 80px; max-width: auto;}
        </style>
        <link href="site.css" rel="stylesheet" type="text/css" />
        <link rel="icon" href="../assets/buttons/icons8-button7-64.png" type="image/png" />
    </head>

    <body>
        
        <section id="page">       
            <nav><%- navi %></nav>
            <header>Manage Artifacts</header>
            <main></main>
                <table class="table">
                    <thread>
                        <tr>
                            <th scope="col">ArtifactID</th>
                            <th scope="col">ArtifactName</th>
                            <th scope="col">ArtifactQR</th>
                            <th scope="col">ArtifactPhoto</th>
                        </tr>
                    </thread>
                    <tbody>
                        <% artifacts.forEach((artifact) => { %>
                        <tr>
                            <th scope="row"><% artifact.ArtifactID %></th>
                            <td><%= artifact.ArtifactID %></td>
                            <td><%= artifact.ArtifactName %></td>
                            <td><img src="<%= artifact.PathToQRAsset %>" type="image/png" alt="QR Code"></td>
                            <td><img src="<%= artifact.PathToPhotoAsset%>" type="image.png" alt="Photo"></td>
                            <td><a href="/artifact/<%= artifact.ArtifactID %>/edit"><button class="btn" type="submit">Edit Artifact</button></a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

            </main>
        </section>

        <link rel="stylesheet" href="/site.css" type="text/css"/>
        <script src="/site.js"></script>

    </body>
</html>

