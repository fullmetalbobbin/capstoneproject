<!DOCTYPE html>
<html lang="en">

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Manage: Gallery</title>
        <style>
            ul {list-style-type: none;}
        </style>
        <link href="site.css" rel="stylesheet" type="text/css" />
        <link rel="icon" href="../assets/buttons/icons8-button7-64.png" type="image/png" />
    </head>

    <body>

        <section id="page">       
            <nav><%- navi %></nav>
            <header>Manage Gallery</header>
            <main> 
                Include or exclude exhibits from the main gallery.
                <table class="table">

                    <thread>
                        <tr>
                            <th scope="col">ExhibitID</th>
                            <th scope="col">ExhibitName</th>
                            <th scope="col">IsDisplayedInGallery</th>
                        </tr>
                    </thread>
                    <tbody>
                        <% exhibits.forEach((exhibit) => { %>
                        <tr>
                            <th scope="row"><% exhibit.ExhibitID %></th>
                            <td><%= exhibit.ExhibitID %></td>
                            <td><%= exhibit.ExhibitName %></td>
                            <td>
                                <form>
                                    <form>
                                        <% if(exhibit.IsDisplayedInGallery == 1) { %> 
                                            <label for="display">Include:</label>
                                            <input type="radio" name="display" value="1" checked/>
                                            <label for="display">Exclude:</label>
                                            <input type="radio" name="display"/>
                                            <% } else { %>
                                            <label for="display">Include:</label>
                                            <input type="radio" name="display"/>
                                            <label for="display">Exclude:</label>
                                            <input type="radio" name="display" value="0" checked/>
                                        <% } %>
                                        </form>
                                        <div style="padding:10px"></div>
                                        <input type="submit" value="Update"/>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </main>
        </section>

        <link rel="stylesheet" href="../site.css" type="text/css"/>
        <script src="../site.js"></script>

    </body>
</html>

